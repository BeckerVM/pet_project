<div class="dashboard">
  {{> adminmenu }}

  <div class="dpets">
    <h2 class="dpets__title">Agrega Una Nueva Mascota</h2>
    <p class="dpets__subtitle">Que estará esperando una <b>Nueva Familia</b></p>

    <!-- Upload  -->
    <div class="dpets__content">
      <form class="donation__inputs">
        <div class="donation__container-inputs">
          <div class="donation__input">
            <label for="">NOMBRE</label>
            <input type="text" placeholder="Nombre" class="dp">
          </div>
          <div class="donation__input">
            <label for="">SEXO</label>
            <select name="" id="">
              <option value="">M</option>
              <option value="">F</option>
            </select>
          </div>
        </div>
        <div class="donation__container-inputs">
          <div class="donation__input">
            <label for="">TAMAÑO</label>
            <select name="" id="">
              <option value="">Grande</option>
              <option value="">Mediano</option>
              <option value="">Pequeño</option>
            </select>
          </div>
          <div class="donation__input">
            <label for="">CLASE</label>
            <select name="" id="">
              <option value="">Perro</option>
              <option value="">Gato</option>
            </select>
          </div>
        </div>
        <div class="donation__container-inputs">
          <div class="donation__input">
            <label for="">PELAJE</label>
            <select name="" id="">
              <option value="">Corto</option>
              <option value="">Medio</option>
              <option value="">Grande</option>
            </select>
          </div>
          <div class="donation__input">
            <label for="">CRECIMIENTO</label>
            <select name="" id="">
              <option value="">Cachorro</option>
              <option value="">Adulto</option>
              <option value="">Senior</option>
            </select>
          </div>
        </div>
        <div class="donation__container-inputs">
          <div class="donation__input">
            <label for="">INFORMACIÓN</label>
            <textarea name="" id="" cols="30" rows="7">

            </textarea>
          </div>
        </div>
        <div class="donation__container-inputs">
          <div class="donation__input">
            <label for="">HISTORIA</label>
            <textarea name="" id="" cols="30" rows="7">

            </textarea>
          </div>
        </div>
        <div class="donation__file">
          <label for="file">Selecciona <i class="fas fa-upload"></i></label>
          <input type="file" id="file" name="file">
        </div>
        <div class="donation__submit">
          <button type="submit">GUARDAR</button>
        </div>
      </form>
    </div>
  </div>
  {{> adminfooter }}
  <script src="/js/upload.js"></script>
</div>